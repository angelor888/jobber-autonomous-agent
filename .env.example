# Jobber API Configuration
JOBBER_CLIENT_ID=your_client_id_here
JOBBER_CLIENT_SECRET=your_client_secret_here
JOBBER_WEBHOOK_SECRET=your_webhook_secret_here
JOBBER_API_URL=https://api.getjobber.com/api/graphql
JOBBER_OAUTH_URL=https://api.getjobber.com/api/oauth/token

# Server Configuration
PORT=3000
BASE_URL=https://your-domain.com
NODE_ENV=production

# Redis Configuration (optional for caching)
REDIS_URL=redis://localhost:6379

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_FROM=agent@duetright.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASS=your_app_password

# Agent Configuration
AGENT_NAME=DuetRight_AI
AUTONOMOUS_MODE=true
LEARNING_ENABLED=true
DECISION_CONFIDENCE_THRESHOLD=0.8

# Security
JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=https://app.duetright.com,https://duetright.com

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here