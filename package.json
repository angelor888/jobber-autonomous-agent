{
  "name": "jobber-autonomous-agent",
  "version": "2.0.0",
  "description": "AI-powered autonomous webhook processor for Jobber field service management",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "verify": "node scripts/verify.js",
    "deploy": "npm run lint && npm test && git push heroku main",
    "logs": "heroku logs --tail",
    "health": "curl https://localhost:3000/health"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "jobber",
    "automation",
    "webhooks",
    "field-service",
    "ai-agent",
    "multi-user"
  ],
  "author": "DuetRight Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "redis": "^4.6.11",
    "bull": "^4.11.5",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "@types/jest": "^29.5.10"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}